{
  "name": "scientific-image-forgery-detection",
  "version": "1.0.0",
  "description": "Advanced AI-powered system for detecting copy-move forgeries in biomedical research images",
  "author": "Cavin Otieno",
  "license": "MIT",
  "homepage": "https://github.com/OumaCavin/scientific-image-forgery-detection",
  "repository": {
    "type": "git",
    "url": "https://github.com/OumaCavin/scientific-image-forgery-detection.git"
  },
  "keywords": [
    "image-forgery-detection",
    "ai",
    "machine-learning",
    "computer-vision",
    "biomedical-imaging",
    "deep-learning",
    "pytorch",
    "react",
    "fastapi",
    "scientific-research"
  ],
  "scripts": {
    "setup": "python setup.py",
    "start": "bash start.sh",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && python setup.py build",
    "build": "npm run build:frontend",
    "dev:backend": "cd backend && python main.py",
    "dev:frontend": "cd frontend && npm run dev",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "test:backend": "cd backend && pytest",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "lint:backend": "cd backend && flake8 .",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:all": "npm run lint:backend && npm run lint:frontend",
    "format:backend": "cd backend && black .",
    "format:frontend": "cd frontend && npm run format",
    "format:all": "npm run format:backend && npm run format:frontend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:build": "docker-compose build",
    "docker:prod": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf backend/__pycache__ backend/venv frontend/node_modules frontend/dist",
    "clean:all": "npm run clean && rm -rf logs uploads results data/processed data/results",
    "deploy:vercel": "cd frontend && vercel --prod",
    "deploy:docker": "bash build.sh && docker-compose up -d",
    "health:check": "curl -f http://localhost:8000/health && curl -f http://localhost:3000",
    "help": "echo 'Available scripts: setup, start, build, dev:backend, dev:frontend, install:all, test:all, docker:dev, docker:build, clean, help'"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
